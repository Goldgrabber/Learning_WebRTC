<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:site_name" content="Video chat">
    <meta property="og:url" content="">
    <meta property="og:description" content="Video chat">
    <meta property="og:image" content="">
    <title>Meet Rooms</title>
    <link rel="stylesheet" href="style.css" />
    <!-- Required scripts -->
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/8161d78ce2.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>
  </head>
  <body>
    <div class="header">
      <div class="logo">
        <div class="header-back">
          <i class="fas fa-angle-left"></i>
        </div>
        <h3>Meeting Room</h3>
      </div>
    </div>  
    <div class="main">  
    <div class="m-left">
      <div class="videos-group">
        <div id="video-grid">

        </div>
      </div>
      <div class="options">
        <div class="options-left">
          <div id="stopVideo" class="options-button">
            <i class="fa fa-video-camera"></i>
          </div>
          <div id="muteButton" class="options-button">
            <i class="fa fa-microphone-alt"></i>
          </div>
          <div id="showChat" class="options-button">
            <i class="fa fa-comment"></i>
          </div>
        </div>
        <div class="options-right">
          <div id="inviteButton" class="options-button">
            <i class="fas fa-user-plus"></i>
          </div>
        </div>
      </div>
    </div>
    <div class="m-right">
      <div class="m-chat-window">
          <div class="messages">

          </div>
      </div>
      <div class="m-message-container">
        <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
        <div id="send" class="options-button">
          <i class="fa fa-paper-plane" aria-hidden="true"></i>
        </div>
      </div>
    </div>
  </div>
  </body>
  <script src="script.js"></script>
</html>
